    <!--
        *******************************
        ***                         ***
        ***   M I S C E L L A N Y   ***
        ***                         ***
        *******************************
    -->

    <target name="echoproperties">
        <echo>All properties:</echo>
        <echoproperties/>
    </target>

</project>
