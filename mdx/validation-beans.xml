        check_future_0
    -->
    <bean id="check_future_0" parent="XSLValidationStage"
        p:id="check_future_0">
        <property name="XSLResource">
            <bean parent="FileSystemResource">
                <constructor-arg value="${rulesdir}/check_future_0.xsl"/>
            </bean>
        </property>
    </bean>
    
